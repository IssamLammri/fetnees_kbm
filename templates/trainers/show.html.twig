{% extends 'base.html.twig' %}

{% block title %}Trainers{% endblock %}

{% block body %}
    <div class="container">
        <h1>Trainer Details</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trainer.id }}</td>
            </tr>
            <tr>
                <th>Trainer Full Name</th>
                <td>{{ trainer.trainerFullName }}</td>
            </tr>
            <tr>
                <th>Trainer Rank</th>
                <td>{{ trainer.trainerRank }}</td>
            </tr>
            <tr>
                <th>Facebook Link</th>
                <td>{{ trainer.facebookLink }}</td>
            </tr>
            <tr>
                <th>Instagram Link</th>
                <td>{{ trainer.instegramLink }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('app_trainers_index') }}" class="btn btn-secondary mt-4">Back to List</a>

        <a href="{{ path('app_trainers_edit', {'id': trainer.id}) }}" class="btn btn-primary mt-4">Edit</a>

        {{ include('trainers/_delete_form.html.twig') }}
    </div>
{% endblock %}
