{% extends 'base.html.twig' %}

{% block title %}Room Details{% endblock %}

{% block body %}
    <div class="container">
        <h1>Room Details</h1>

        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">Room Information</h5>
                <table class="table">
                    <tbody>
                    <tr>
                        <th scope="row">ID</th>
                        <td>{{ room.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Room Name</th>
                        <td>{{ room.roomName }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Room Description</th>
                        <td>{{ room.roomDescription }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Star Rating</th>
                        <td>{{ room.star }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Price</th>
                        <td>{{ room.price }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Old Price</th>
                        <td>{{ room.oldPrice }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <a href="{{ path('app_rooms_index') }}" class="btn btn-secondary">Back to List</a>
        <a href="{{ path('app_rooms_edit', {'id': room.id}) }}" class="btn btn-primary">Edit</a>

        {{ include('rooms/_delete_form.html.twig') }}
    </div>
{% endblock %}
