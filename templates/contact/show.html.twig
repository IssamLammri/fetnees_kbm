{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <div class="container">
        <h1>Contact</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>FullName</th>
                <td>{{ contact.fullName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.email }}</td>
            </tr>
            <tr>
                <th>PhoneNumber</th>
                <td>{{ contact.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ contact.subjet }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ contact.message }}</td>
            </tr>
            </tbody>
        </table>

        <div class="text-center">
            <a href="{{ path('app_contact_index') }}" class="btn btn-primary me-2">Back to list</a>
            <a href="{{ path('app_contact_edit', {'id': contact.id}) }}" class="btn btn-secondary">Edit</a>
        </div>

        {{ include('contact/_delete_form.html.twig') }}
    </div>
{% endblock %}
