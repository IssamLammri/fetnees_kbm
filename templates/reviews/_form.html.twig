{{ form_start(form) }}
<div class="mb-3">
    <label for="{{ form.fullName.vars.id }}" class="form-label">Full Name</label>
    {{ form_widget(form.fullName, {'attr': {'class': 'form-control'}}) }}
</div>
<div class="mb-3">
    <label for="{{ form.comment.vars.id }}" class="form-label">Comment</label>
    {{ form_widget(form.comment, {'attr': {'class': 'form-control'}}) }}
</div>
<div class="mb-3">
    <label for="{{ form.star.vars.id }}" class="form-label">Star</label>
    {{ form_widget(form.star, {'attr': {'class': 'form-control'}}) }}
</div>
<button class="btn btn-primary">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
